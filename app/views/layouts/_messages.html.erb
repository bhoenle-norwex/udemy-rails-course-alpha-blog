<% flash.each do | name, msg | %>
    <div class="alert alert-<%= get_flash_alert_class(name) %> d-flex align-items-center alert-dismissible fade show" role="alert">
        <i class="bi bi-<%= get_flash_icon_class(name) %>"></i>
        <div class="ps-3 mt-2">
            <%= name.capitalize %>:: <%= msg %>
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% end %>
